<UserControl x:Class="Chat.ChatMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat"
             mc:Ignorable="d" MouseDown="UserControl_MouseDown" Width="191.315">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="115*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="29"/>
        </Grid.RowDefinitions>
        <Rectangle Stroke="Red" Grid.RowSpan="2" Grid.ColumnSpan="2" />
        <TextBlock x:Name="textBlockMessage" Text="SampleTextIsALongTextSoItHasANewLineInIt" FontSize="16" HorizontalAlignment="Left" TextWrapping="Wrap" Grid.ColumnSpan="2" />
        <Label x:Name="labelDate" Content="01.01.2000 24:00:00" HorizontalAlignment="Right" Grid.Row="1" Width="114" Grid.Column="1"/>
        <Label x:Name="labelFrom" Content="SwaggyG" HorizontalAlignment="Left"  Grid.Row="1" Width="59" Grid.Column="0"/>
    </Grid>
</UserControl>
